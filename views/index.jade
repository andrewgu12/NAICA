doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		title= title
		meta(name='description', content='')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(rel='stylesheet', href='/stylesheets/library.css')
	body
		#container
			include ./menu.jade
			#homepage-container
				form(id="submit_email", action="/", method="post")
						div.row
							div(class="large-5 large-offset-6 columns")
								label(for="email-address") Sign up for our Newsletter!
								div(class="input-group")
									input(id="email-address", name="email-address", class="input-group-field", type="email", placeholder="Email Address")
									div(class="input-group-button")
										input(type="submit", class="button", value="Submit")
					
		script(src='/javascript/app.min.js')
